{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "lib": [
      "es2015",
      "dom"
    ],
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true
  },

  "include": [
    "src/angular/**/*.ts",
    "src/angular/app/app.module.ts",
    "src/angular/main.aot.ts"
  ],

  "angularCompilerOptions": {
    "genDir": "src/angular/assets/aot",
    "skipMetadataEmit": false
  },
  "exclude": [
    "./node_modules/**",
    "**/main.ts"
  ]
}
